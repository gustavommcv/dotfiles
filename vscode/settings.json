{
  //////// CSS and SCSS settings
  "css.lint.important": "warning",
  "scss.lint.important": "warning",

  //////// JavaScript and TypeScript settings
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  //////// File management settings
  "files.exclude": {
    ".vscode": true,
    "**/.git": false,
    "**/.DS_Store": false,
    "**/.hg": false,
    "**/.svn": false,
    "**/CVS": false,
    "**/Thumbs.db": false
  },
  "files.autoSave": "afterDelay",

  //////// Breadcrumbs settings
  "breadcrumbs.enabled": false, // Disable breadcrumbs path below tabs

  //////// Editor settings
  //// Font and appearance settings
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.8,
  "editor.fontSize": 14,
  "editor.wordWrap": "on",

  //// Line and highlighting settings
  "editor.renderLineHighlight": "all",
  "editor.semanticHighlighting.enabled": false,

  //// Scrollbar and minimap settings
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.minimap.size": "proportional",

  //// Cursor settings
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "line-thin",

  //// Formatting settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  //////// Terminal settings
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",

  //////// Explorer settings
  "explorer.compactFolders": false,
  "explorer.autoReveal": true,
  "explorer.confirmPasteNative": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  //////// Workbench settings (VSCode UI)
  "workbench.colorTheme": "Min Dark",
  "workbench.editor.labelFormat": "short",
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "el-vsc-v1-icons",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",

  //////// Window settings
  "window.commandCenter": false,
  "window.menuBarVisibility": "toggle",

  //////// Security settings
  "security.workspace.trust.untrustedFiles": "open",
  "chat.commandCenter.enabled": false,
  "accessibility.verbosity.inlineChat": false,
  "workbench.editor.empty.hint": "hidden"

  //////// Extensions and custom configurations
}
